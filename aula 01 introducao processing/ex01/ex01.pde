// modo passivo (sem declaracao do ciclo principal)

// tamanho da janela
size(700,450);

// desenho de elipse
ellipse(50,90,20,20);

// cor de preenchimento a amarelo
fill(255,255,0);

// desenho de outra elipse
ellipse(300,150,300,130);

// cor do contorno
stroke(0,0,255);

// espessura do contorno
strokeWeight(5);

// vou desenhar uma linha
line(80,20,610,400);

// espessura do contorno
strokeWeight(1);

// cor do contorno
stroke(0,0,0);

// cor do contorno
fill(255,0,0,150);

// desenho de rectangulo
rect(300,150,500,50);
